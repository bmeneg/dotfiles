#### Maildir configuration ####
set mbox_type = Maildir
set folder = ~/Mail/

set header_cache = '~/.mutt/cache/headers'
set message_cachedir = '~/.mutt/cache/body'
set certificate_file = '~/.mutt/certs'
set mailcap_path = '~/.mutt/mailcap'
set tmpdir = '~/.mutt/tmp'
########

#### Multiple accounts handler ####
## Default account
source ~/.mutt/bmeneguele-gmail/bmeneguele-gmail-muttrc

## Folder hooks
folder-hook 'bmeneguele-gmail' 'source ~/.mutt/bmeneguele-gmail/bmeneguele-gmail-muttrc'
folder-hook 'brdeoliv-redhat' 'source ~/.mutt/brdeoliv-redhat/brdeoliv-redhat-muttrc'

## Switch accounts
macro index,pager <f2> '<sync-mailbox><enter-command>source ~/.mutt/bmeneguele-gmail/bmeneguele-gmail-muttrc<enter><change-folder>!<enter>'
macro index,pager <f3> '<sync-mailbox><enter-command>source ~/.mutt/brdeoliv-redhat/brdeoliv-redhat-muttrc<enter><change-folder>!<enter>'
########

#### SMTP configuration ####
set sendmail_wait = 0
########

#### Search configuration ####
bind index,pager N search-opposite

macro index a "<limit>all\n" "show all messages (undo limit)"
########

#### Sidebar configuration ####
set sidebar_visible
set sidebar_width = 30
set sidebar_short_path
set sidebar_delim_chars = '/.'
set sidebar_folder_indent 
set sidebar_indent_string = ' '
unset sidebar_new_mail_only
unset sidebar_next_new_wrap
set sidebar_divider_char = '  |'
set mail_check_stats
set sidebar_format = '%B%?F? [%F]?%* %?N?%N/?%S'
set sidebar_sort_method = 'unsorted'

# Move the highlight to the previous mailbox
bind index,pager <up> sidebar-prev

# Move the highlight to the next mailbox
bind index,pager <down> sidebar-next

# Open the highlighted mailbox
bind index,pager <right> sidebar-open

# Toggle the visibility of the Sidebar.
bind index,pager B sidebar-toggle-visible
########

#### Status bar configuration ####
set status_chars = " *%A"
set status_format = "--[ Folder: %f ]--[%r%m messages%?n? (%n new)?%?d? (%d to delete)?%?t? (%t tagged)? ]───%>─%?p?( %p postponed )?───"
########

#### General configuration ####
unset mark_old
set tmpdir = /tmp
auto_view text/html
alternative_order text/plain text/html
set quote_regexp = "^( {0,4}[>|:#%]| {0,4}[a-z0-9]+[>|]+)+"
set wait_key = no
set timeout = 3
set mail_check = 0
unset move
set delete
unset confirmappend
set quit
unset mark_old
set beep_new
set pipe_decode
set pipe_split = yes
set thorough_search
set beep_new

bind index,pager j next-entry
bind index,pager k previous-entry
bind index,pager J next-undeleted
bind index,pager K previous-undeleted
#source ~/.mutt/colors/ivy/ivy_league.theme
#source ~/.mutt/colors/solarized/solarized-light-16.theme

## Index
unset collapse_unread
set index_format = "[%Z]  %[%d-%m]  %-20.20F  %s"
set sort = "threads"
set strict_threads = "yes"
set sort_browser = "reverse-date"
set sort_aux = "reverse-last-date-received"
set sort_re
set reply_regexp = "^(([Rr][Ee]?(\[[0-9]+\])?: *)?(\[[^]]+\] *)?)*"

bind index gg first-entry
bind index G last-entry
bind index R group-reply
bind index \e<tab> sync-mailbox
bind index <space> collapse-thread
bind index <tab> next-new-then-unread

macro index \Cr "T~U<enter><tag-prefix><clear-flag>N<untag-pattern>.<enter>" "mark all messages as read"
macro index L "<pipe-entry>git am -s<enter><next-entry>"

## Pager
set pager_index_lines = 20
set pager_context = 3
set pager_stop
set menu_scroll
set tilde
unset markers

bind pager gg top
bind pager G bottom

bind pager R group-reply
bind attach <return> view-mailcap

## Compose email
set realname = "Bruno Meneguele"
set editor = `echo \$EDITOR`
set edit_headers
set charset = UTF-8
set sig_dashes
set fast_reply
set askcc
unset mime_forward
set forward_format = "Fwd: %s"
set forward_quote
set forward_decode
set include 

bind editor <space> noop

## Custom macros
macro index,pager d "<save-message>=trash<enter><enter>" "Trash"
macro index gi "<change-folder>=INBOX<enter>" "Go to inbox"
macro index gs "<change-folder>=sent<enter>" "Go to sent messages"
macro index gd "<change-folder>=drafts<enter>" "Go to drafts"

macro index \Ch "<enter-command>unset wait_key<enter><enter-command>set pipe_decode<enter><tag-prefix><pipe-entry>get-patch-from-mutt<enter><enter-command>unset pipe_decode<enter><enter-command>set wait_key<enter>" "output git patches"
