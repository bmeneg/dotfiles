# EditorConfig file with all my coding styles

# Top-most EditorConfig file
root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespaces = true
max_line_length = 79
wrap_width = 80
indent_style = space
indent_size = 4
tab_width = 4

[*.{c,h,cpp,hpp}]
indent_style = tab
tab_width = 8
indent_size = 8

[{Makefile*,*.spec}]
indent_style = tab
tab_width = 8
indent_size = 8
max_line_length = 120
wrap_width = 120

[*.sh]
indent_style = tab
max_line_length = 120
wrap_width = 120

[*.md]
trim_trailing_whitespaces = false

[*.rst]
trim_trailing_whitespaces = false
max_line_length = 120
wrap_width = 120

[*.{lisp,cl}]
indent_size = 2
